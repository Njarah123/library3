{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "java -Dspring.profiles.active=prod -Dserver.port=$PORT -jar app.jar",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  }
}